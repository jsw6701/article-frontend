{
	"name": "shift-frontend",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"build:web": "cross-env BUILD_TARGET=web vite build",
		"build:app": "cross-env BUILD_TARGET=app vite build --mode production",
		"build:static": "cross-env BUILD_TARGET=static vite build --mode production",
		"build:android": "cross-env BUILD_TARGET=app vite build --mode production && npx cap sync android",
		"preview": "vite preview",
		"preview:web": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"devDependencies": {
		"@capacitor/assets": "^3.0.5",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"cross-env": "^7.0.3",
		"sharp": "^0.34.5",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"typescript": "^5.9.3",
		"vite": "^7.2.6"
	},
	"dependencies": {
		"@capacitor/android": "^8.0.0",
		"@capacitor/cli": "^8.0.0",
		"@capacitor/core": "^8.0.0"
	}
}
